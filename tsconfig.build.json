{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "removeComments": true,
    "sourceMap": true,
    "stripInternal": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/*"
  ]
}
